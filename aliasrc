## SHELL-INDIPENDENT ALIASES

# LESS MANPAGER COLORS AND NO HIST FILE
export LESS_TERMCAP_mb=$'\e[1;32m'
export LESS_TERMCAP_md=$'\e[1;32m'
export LESS_TERMCAP_me=$'\e[0m'
export LESS_TERMCAP_se=$'\e[0m'
export LESS_TERMCAP_so=$'\e[01;33m'
export LESS_TERMCAP_ue=$'\e[0m'
export LESS_TERMCAP_us=$'\e[1;4;31m'
export LESSHISTFILE=/dev/null

# DIRECTORY NAVIGATION ALIASES
alias b='cd ..'
alias c='cd'
alias ll='ls -lhpA --time-style=long-iso --color=auto'
alias ls='ls -hpA --color=auto'
alias lt='ls -lhAt --time-style=long-iso --color=auto'
alias poweroff='sudo poweroff'
alias reboot='sudo reboot'


# PACKAGE MANAGERS

    ## Arch based ##
if [[ -f "/usr/bin/pacman" ]]; then
    alias pmi='sudo pacman -S'    # install
    alias pms='sudo pacman -Ss'   # search
    alias pmr='sudo pacman -Rns'  # unistall
    alias pmc='sudo pacman -Scc'  # clean cache
    alias pmk='sudo pacman-key --refresh-keys' # refresh dev keys
    alias pmu='echo -e "\e[1;34m::\e[m\e[1m Ranking mirrors...\e[m"; sudo reflector --verbose -l 2 -f 2 --sort rate -p https --download-timeout 60 --save /etc/pacman.d/mirrorlis ; pm -Syu'
fi

    ## Debian/apt based ##
if [[ -f "/usr/bin/apt" ]]; then
    alias pmi='sudo apt install'    # install
    alias pms='sudo apt search'     # search
    alias pmr='sudo apt autoremove' # unistall
    alias pmu='sudo apt update && sudo apt upgrade' # update
fi

    ## Termux ##
if [[ -f "/data/data/com.termux/files/usr/bin/pkg" ]]; then
    alias pmi='pkg install'    # install
    alias pms='pkg search'     # search
    alias pmr='pkg unistall'   # unistall
    alias pmu='pkg upgrade'    # update
fi
